<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp" android:layout_margin="2dp" android:layout_marginTop="6dp">
    <ImageView
        android:id="@+id/contact_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="6dp"


        android:contentDescription="contact_image"
        android:layout_marginEnd="6dp" />
    <LinearLayout
        android:layout_width="wrap_content"

        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" android:orientation="vertical">
    <TextView
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:text="contact_name" />
        <TextView
            android:id="@+id/contact_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:textStyle="italic"
            android:textSize="12dp"
            android:layout_margin="6dp"
            android:text="contact_mail" />
    </LinearLayout>
</LinearLayout>