<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="20dp"
            android:contentDescription="User profile pic"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/staic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="8dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="User Profile"
            android:textColor="#691010"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="177dp"
            android:autofillHints="" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name Of User"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="237dp"
            android:textColor="#0551E4"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="user_name"
            tools:layout_editor_absoluteX="77dp"
            tools:layout_editor_absoluteY="297dp" />

        <TextView
            android:id="@+id/mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="16dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:shadowColor="#00DD1212"
            android:text="Mail Of User"
            android:textColor="#0551E4"
            android:textStyle="italic"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="355dp" />

        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="user_email"
            tools:layout_editor_absoluteX="74dp"
            tools:layout_editor_absoluteY="415dp" />

        <Button
            android:id="@+id/modifierButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifier le compte" />

    </LinearLayout>

</FrameLayout>